{{>layout/header}}

<main class="cg-auth-page">
    <section class="cg-auth-card">
        <h1 class="cg-auth-title">회원가입</h1>
        <p class="cg-auth-sub">필수 정보를 입력해 계정을 생성하세요.</p>

        <form id="signupPageForm" class="cg-authform" method="post" action="/signup">
            <label class="cg-label">이메일</label>
            <input class="cg-input" name="memberEmail" type="email" placeholder="you@example.com" required/>

            <label class="cg-label">닉네임 (최대 8자)</label>
            <input class="cg-input" name="memberNickname" type="text" maxlength="8" required/>

            <label class="cg-label">나이</label>
            <input class="cg-input" name="memberAge" type="number" min="1" max="120" placeholder="예: 26" required/>

            <label class="cg-label">성별</label>
            <div style="display:flex; gap:12px; align-items:center;">
                <label style="display:flex; gap:6px; align-items:center;">
                    <input type="radio" name="memberGender" value="M" required/>
                    <span>남자</span>
                </label>
                <label style="display:flex; gap:6px; align-items:center;">
                    <input type="radio" name="memberGender" value="F" required/>
                    <span>여자</span>
                </label>
            </div>

            <label class="cg-label">비밀번호</label>
            <input class="cg-input" name="memberPassword" type="password" placeholder="8자 이상" minlength="8" required/>

            <label class="cg-label">비밀번호 확인</label>
            <input class="cg-input" name="memberPasswordConfirm" type="password" minlength="8" required/>

            <button class="cg-btn cg-auth-submit" type="submit">회원가입</button>
        </form>

        {{#error}}
            <p class="cg-auth-tip" style="color:#c62828">{{error}}</p>
        {{/error}}

        <p class="cg-auth-tip">이미 계정이 있으신가요? <a class="cg-link" href="/login">로그인</a></p>
    </section>
</main>

{{>layout/footer}}
